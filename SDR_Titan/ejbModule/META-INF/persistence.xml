<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
   <persistence-unit name="TableProduits" transaction-type="JTA">
      <jta-data-source>java:Iconsult2KDB</jta-data-source>
      <class>com.iconsult2k.components.Produit</class>
      
      <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
         <property name="hibernate.connection.username" value="jboss"/>
         <property name="hibernate.connection.password" value="insia"/>
         <property name="hibernate.hbm2ddl.auto" value="validate"/>
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/bookingEntityManagerFactory"/>
      </properties>
      
   </persistence-unit>
</persistence>
  
 