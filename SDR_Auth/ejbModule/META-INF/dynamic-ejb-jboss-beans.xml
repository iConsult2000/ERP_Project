<?xml version="1.0" encoding="UTF-8"?>
<deployment xmlns="urn:jboss:bean-deployer:2.0">
  <application-policy xmlns="urn:jboss:security-beans:1.0" name="titan2K">
    <authentication>
     <login-module
	code="org.jboss.security.auth.spi.DatabaseServerLoginModule" flag="required">
         <module-option name="dsJndiName">java:/AuthDS</module-option>
         <module-option name="unauthenticatedIdentity">guest</module-option>
        <module-option name="principalsQuery">select Password from Principals where PrincipalID=?</module-option>
        <module-option name="rolesQuery"> select Role, 'Roles' from Roles where PrincipalID=?</module-option>
     </login-module>      
    </authentication>
<!-- 
    <authorization>
      <policy-module
      code="org.jboss.security.authorization.modules.JACCAuthorizationModule"
      flag="required"/>
    </authorization>
     -->
  </application-policy>

</deployment>

